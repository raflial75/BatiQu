<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CapstoneProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/beige</item>
        <item name="colorPrimaryVariant">@color/beige</item>
        <item name="colorOnPrimary">@color/beige2</item>
        <item name="android:windowBackground">@color/beige2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/beige</item>
        <item name="colorSecondaryVariant">@color/beige</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- ... properti lainnya ... -->
        <item name="android:textColorPrimary">@color/greydark</item>
        <item name="android:textColorSecondary">@color/greydark</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/move</item>
        <item name="android:windowExitTransition">@android:transition/move</item>
    </style>

</resources>